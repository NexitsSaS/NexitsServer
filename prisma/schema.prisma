generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum order_state {
  Placed
  Pending
  Approuved
  Archived
}

model employee {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  order order?
  cart  cart?
}

model order {
  id          Int         @id @default(autoincrement())
  employee    employee?   @relation(fields: [employeeID], references: [id])
  employeeID  Int         @unique
  cart        cart?       @relation(fields: [cartID], references: [id])
  cartID      Int         @unique
  isapprouved Boolean     @default(false)
  state       order_state
}

model cart {
  id         Int       @id @default(autoincrement())
  employee   employee? @relation(fields: [employeeID], references: [id])
  employeeID Int       @unique
  order      order?
  product    product[]
}

model product {
  id     Int    @id @default(autoincrement())
  name   String
  price  Int
  cart   cart?  @relation(fields: [cartID], references: [id])
  cartID Int
}

model clientadmin {
  id   Int    @id @default(autoincrement())
  name String
}

